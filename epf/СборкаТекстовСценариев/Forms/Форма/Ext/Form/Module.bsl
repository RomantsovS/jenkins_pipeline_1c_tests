			ЗаписьJSON.ЗаписатьЗначение(ПрофильПользователя.ИмяКомпьютера);
			ЗаписьJSON.ЗаписатьИмяСвойства("ПортЗапускаТестКлиента");
			ЗаписьJSON.ЗаписатьЗначение(ПрофильПользователя.ПортЗапускаТестКлиента);
